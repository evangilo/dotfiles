[color]
    ui = true

[core]
    excludesfile = ~/.gitignore

[user]
    name = Evangilo Morais
    email = evangilo@gmail.com

[alias]
    ci = commit
    cam = commit -am
    co = checkout
    df = diff --word-diff
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    st = status
    out = !git log origin/$1..HEAD 
    #out = show --pretty=fuller

[branch]
    autosetuprebase = always

[push]
    default = upstream

[merge]
	tool = opendiff

[difftool "opendiff"]
	cmd = opendiff

[mergetool "opendiff"]
	trustExitCode = true
