alias rmpyc='find . -type f -name *.pyc -delete'
alias rmorig='find . -type f -name *.orig -delete'
alias rmdiff='find . -type f -name *.diff -delete'
alias rmpatch='find . -type f -name *.patch -delete'
alias emacsd="emacs -daemon && emacsclient -c -n"
alias sssh='ssh -lroot -p2222'
alias rgrep='grep -nr --color --exclude-dir={.bzr,CVS,.git,.hg,.svn,node_modules,vendor,app_bundles,polymer} --exclude=\*.{pyc,orig,rej,font-awesome.min.css}'

if [[ "$OSTYPE" != "darwin"* ]]; then
  alias pbcopy='xsel --clipboard --input'
  alias pbpaste='xsel --clipboard --output'
fi

